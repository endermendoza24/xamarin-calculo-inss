<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraINSS.MainPage">

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        <Label Text="Cálculo pensión INSS"></Label>
        <Entry Placeholder="Promedio salarial" x:Name="Salario"></Entry>
        <Entry Placeholder="Número de semanas" x:Name="Semanas"></Entry>
        <Entry Placeholder="Tu pensión es: " x:Name="Resultado"></Entry>
        

        <Button Text="Calcular" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
